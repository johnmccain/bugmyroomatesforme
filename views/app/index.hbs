<p id="welcome">Welcome, {{user.username}}</p>

<ul class="nav nav-pills nav-stacked">
{{#each user.pads}}
	<li>
		<a href="/app/pad/{{this._id}}">
			{{this.name}}
		</a>
	</li>
{{/each}}
{{#unless user.pads}}
	<li>
		<a href="#">
			No pads
		</a>
	</li>
{{/unless}}
</ul>

<a href="/app/pad/new" class="btn btn-primary">New Pad</a>


