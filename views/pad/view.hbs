<h2>{{pad.name}}</h2>
<p>{{pad.description}}</p>
<a class="btn btn-primary" href="/app/pad/edit/{{pad._id}}">Edit</a>
<hr/>
<h4>Squad:</h4>
<ul>
{{#each pad.users}}
	<li>
		<a href="/app/user/{{this._id}}">
			{{this.username}}
		</a>
	</li>
{{/each}}
{{#unless pad.users}}
	<li>Squadless!</li>
{{/unless}}
</ul>
<h4>Bills:</h4>
<ul>
{{#each pad.bills}}
	<li>
		<a href="/app/bill/{{this._id}}">
			{{this.name}}
		</a>
	</li>
{{/each}}
{{#unless pad.bills}}
	<li>Bill-less!</li>
{{/unless}}
</ul>
<a class= "btn btn-primary" href="/app/bill/new/{{pad._id}}">Create a bill type</a>
