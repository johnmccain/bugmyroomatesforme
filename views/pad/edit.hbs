<h3>Edit Pad</h3>
<form method="post">
	<div class="form-group">
		<label for="name">Name:</label>
		<input id="name" class="form-control" type="text" name="name" value="{{pad.name}}" />
	</div>
	<div class="form-group">
		<label for="description">Description:</label>
		<input id="description" class="form-control" type="textarea" name="description" value="{{pad.description}}" />
	</div>
	<div class="form-group">
		<input class="btn btn-primary" type="submit" value="Create" />
	</div>
</form>
