<form method="post">
    <div class="form-group">
        <label for="name">Bill name:</label>
        <input id="name" class="form-control" type="text" name="name"/>
    </div>
    <div class="form-group">
      {{#each users}}
        <label for="{{this._id}}">{{this.username}}:</label>
        <input name="{{this._id}}" class="form-control" type="number" step="0.01" min="0.00" max="1.00">
      {{/each}}
    </div>
    <div class="form-group">
        <label for="accountholders">Account Holders (hold shift to select more than one):</label>
          <select id="accountholders" name="accountholders" multiple class="form-control">
            {{#each users}}
              <option value="{{this._id}}">{{this.username}}</option>
            {{/each}}
          </select>
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Submit"/>
    </div>
</form>
